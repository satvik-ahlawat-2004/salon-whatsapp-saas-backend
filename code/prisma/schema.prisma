generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  RECEPTIONIST
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  SENT
  DELIVERED
  FAILED
  RECEIVED
}

model Salon {
  id        String   @id @default(uuid())
  name      String
  phone     String?
  city      String?
  timezone  String?  @default("Asia/Kolkata")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users        User[]
  staffMembers Staff[]
  services     Service[]
  customers    Customer[]
  appointments Appointment[]
  whatsappLogs WhatsAppMessage[]
}

model User {
  id        String    @id @default(uuid())
  salonId   String
  name      String
  email     String    @unique
  phone     String?
  password  String
  role      UserRole
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  salon          Salon                     @relation(fields: [salonId], references: [id], onDelete: Cascade)
  statusChanges  AppointmentStatusHistory[] @relation("UserStatusChanges")
}

model Staff {
  id        String   @id @default(uuid())
  salonId   String
  name      String
  phone     String?
  title     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salon        Salon         @relation(fields: [salonId], references: [id], onDelete: Cascade)
  appointments Appointment[]
}

model Service {
  id              String   @id @default(uuid())
  salonId         String
  name            String
  description     String?
  durationMinutes Int
  price           Decimal  @db.Decimal(10, 2)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  salon        Salon         @relation(fields: [salonId], references: [id], onDelete: Cascade)
  appointments Appointment[]
}

model Customer {
  id        String   @id @default(uuid())
  salonId   String
  name      String
  phone     String
  email     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salon        Salon         @relation(fields: [salonId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@unique([salonId, phone])
}

model Appointment {
  id           String              @id @default(uuid())
  salonId      String
  customerId   String
  staffId      String
  serviceId    String
  startTime    DateTime
  endTime      DateTime
  status       AppointmentStatus   @default(PENDING)
  notes        String?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt

  salon       Salon                   @relation(fields: [salonId], references: [id], onDelete: Cascade)
  customer    Customer                @relation(fields: [customerId], references: [id], onDelete: Cascade)
  staff       Staff                   @relation(fields: [staffId], references: [id], onDelete: Cascade)
  service     Service                 @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  statusLog   AppointmentStatusHistory[]
  whatsappLog WhatsAppMessage[]

  @@index([salonId, staffId, startTime])
  @@index([salonId, customerId])
}

model AppointmentStatusHistory {
  id            String             @id @default(uuid())
  appointmentId String
  status        AppointmentStatus
  note          String?
  changedById   String?
  createdAt     DateTime @default(now())

  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  changedBy   User?       @relation("UserStatusChanges", fields: [changedById], references: [id], onDelete: SetNull)
}

model WhatsAppMessage {
  id            String          @id @default(uuid())
  salonId       String
  appointmentId String?
  direction     MessageDirection
  status        MessageStatus
  fromNumber    String
  toNumber      String
  body          String?
  waMessageId   String?
  payload       Json?
  createdAt     DateTime @default(now())

  salon       Salon        @relation(fields: [salonId], references: [id], onDelete: Cascade)
  appointment Appointment? @relation(fields: [appointmentId], references: [id], onDelete: SetNull)
}

